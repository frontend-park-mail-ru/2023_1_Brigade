{
    "compilerOptions": {
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
        "@utils/*":  ["src/utils/*"],
        "@services/*": ["src/services/*"],
        "@components/*":  ["src/components/*"],
        "@templates/*": ["src/templates/*"],
        "@pages/*":  ["src/pages/*"],
        "@assets/*":  ["src/assets/*"],
        "@img/*":  ["src/assets/img/*"],
        "@fonts/*":  ["src/assets/fonts/*"],
        "@router/*":  ["src/router/*"],
        "@store/*":  ["src/store/*"],
        "@reducers/*":  ["src/reducers/*"],
        "@actions/*":  ["src/actions/*"],
        "@config/*": ["src/config/*"],
      },
      "strict": true,
      "module": "commonjs",
      "noImplicitAny": true,
      "strictNullChecks": true,
      "sourceMap": true,
      "target": "es2017",
      "allowJs": true,
      "noEmit": false,
      "skipLibCheck": true,
      "isolatedModules": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
    },
    "exclude": ["node_modules"],
}
