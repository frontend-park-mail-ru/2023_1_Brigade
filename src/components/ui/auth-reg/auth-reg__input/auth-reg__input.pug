mixin authRegInput(inputType)
    if inputType=='email'
        input(type='email', placeholder='Email address').auth-reg__input
    else if inputType=='password'
        input(type='password', placeholder='Password').auth-reg__input
    else if inputType=='nick'
        input(type='text', placeholder='Your nick').auth-reg__input
    else if inputType=='confirm password'
        input(type='password', placeholder='Confirm password').auth-reg__input
