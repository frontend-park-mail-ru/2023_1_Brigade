{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": ["src/templates/*.js"],
    "rules": {
        "import/extensions": "off",
        "indent": ["error", 4]
    },
    "import/no-extraneous-dependencies": [
        "error", {
            "devDependencies":[
                "**/*.test.ts",
                "**/*.test.tsx"
            ]
        }
    ]
}
