{
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],  
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:@typescript-eslint/recommended",
        "plugin:prettier/recommended",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        // "@typescript-eslint/no-empty-interface": "off", //TODO
        "@typescript-eslint/no-empty-function": "off", //TODO
        "prettier/prettier": [
            "error", { 
                "tabWidth": 4,
                "singleQuote": true
            }
        ]
    }
}
