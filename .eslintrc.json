{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": ["src/templates/*.js"],
    "rules": {
        "import/extensions": "off",
        "indent": ["error", 4],
        "import/prefer-default-export": "off",
        "class-methods-use-this": "off",
        "import/no-extraneous-dependencies": "off"
    }
}
